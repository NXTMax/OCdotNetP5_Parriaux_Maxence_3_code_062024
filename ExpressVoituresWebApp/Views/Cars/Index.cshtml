@model IEnumerable<ExpressVoituresWebApp.Data.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResellPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResellDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResellPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResellDate)
            </td>
            <td>
                @item.Model
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Vin">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Vin">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Vin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
